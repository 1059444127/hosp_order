<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sfturing.dao.OfficeDao">
	<!-- 通过医院名称地区信息 -->
	<select id="findOfficeByHosName" resultType="cn.sfturing.entity.Office"
		parameterType="java.lang.String">
		SELECT
		* FROM `hos_office`
		WHERE hospital_name =
		#{hospitalName}
	</select>
	
	<!-- 通过ID地区信息 -->
	<select id="findOfficeById" resultType="cn.sfturing.entity.Office"
		parameterType="int">
		SELECT
		* FROM `hos_office`
		WHERE id =
		#{id}
	</select>

	<!--推荐科室 -->
	<select id="findHosByRe" resultType="cn.sfturing.entity.Office" parameterType="java.util.Map">
		SELECT *
		FROM `hos_office`
		WHERE 1=1 AND hospital_name in
		<foreach item="hospital" index="index" collection="list" open="("
			separator="," close=")">
			#{hospital.hospitalName}
		</foreach>
		limit #{start},#{size}
	</select>
	<!--推荐科室数量 -->
	<select id="findHosByReNum" resultType="java.lang.Integer" >
		SELECT COUNT(*)
		FROM `hos_office`
		WHERE 1=1 AND hospital_name in
		<foreach item="hospitalName" index="index" collection="list" open="("
			separator="," close=")">
			#{hospitalName.hospitalName}
		</foreach>
	</select>


</mapper>