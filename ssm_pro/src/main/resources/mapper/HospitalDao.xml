<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sfturing.dao.HospitalDao">
	<!--通过ID查询医院 -->
	<select id="findHosById" resultMap="Hospital" parameterType="int">
		SELECT * FROM `hospital`
		WHERE id = #{id}
	</select>
	<!--通过医院名称查询医院  -->
	<select id="findHosByName" resultMap="Hospital" parameterType="java.lang.String">
		SELECT * FROM `hospital`
		WHERE hospital_name = #{hospitalName}
	</select>
	<!-- 查询开通预约挂号的医院 -->
	<select id="findOpenHos" resultMap="Hospital">
		SELECT * FROM `hospital`
		WHERE is_open = 1
	</select>

</mapper>