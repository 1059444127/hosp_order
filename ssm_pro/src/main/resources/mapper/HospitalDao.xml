<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sfturing.dao.HospitalDao">
	<!--通过ID查询医院 -->
	<select id="findHosById" resultType="cn.sfturing.entity.Hospital" parameterType="int">
		SELECT * FROM `hospital`
		WHERE id = #{id}
	</select>
	<!--通过医院名称查询医院  -->
	<select id="findHosByName" resultType="cn.sfturing.entity.Hospital" parameterType="java.lang.String">
		SELECT * FROM `hospital`
		WHERE hospital_name = #{hospitalName}
	</select>
	<!-- 查询开通预约挂号的医院 -->
	<select id="findOpenHos" resultType="cn.sfturing.entity.Hospital">
		SELECT * FROM `hospital`
		WHERE is_open = 1
	</select>
	<!-- 推荐9个开通预约挂号的医院 -->
	<select id="findHosByRe" resultType="cn.sfturing.entity.Hospital">
		SELECT * FROM `hospital`
		WHERE is_open = 1 limit 12,20
	</select>
	<!-- 查询全部支持预约医院的数量 -->
	<select id="findOrderHosNum" resultType="java.lang.Integer">
		SELECT count(*) FROM `hospital`
		where is_open = 1
		 
	</select>
	<!-- 查询全部支持预约医院 -->
	<select id="findOrderHos" resultType="cn.sfturing.entity.Hospital">
		SELECT * FROM `hospital`
		WHERE is_open = 1 limit #{start},#{size}
	</select>
</mapper>