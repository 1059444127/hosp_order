<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sfturing.dao.AreaDao">
	<!-- 通过ID地区信息 -->
	<select id="findAreaById" resultType="cn.sfturing.entity.Area" parameterType="int">
		SELECT
		* FROM `area`
		WHERE id = #{id}
	</select>
	<!-- 根据地区名称查找城市信息 -->
	<select id="findAreaByName" resultType="cn.sfturing.entity.Area" parameterType="java.lang.String">
		SELECT * FROM `area`
		WHERE area_name = #{areaName}
	</select>
	<!-- 根据区县姓名查找父级1级城市 -->
	<select id="findAreaFatherByName" resultType="cn.sfturing.entity.Area"
		parameterType="java.lang.String">
		SELECT
		area_name
		FROM
		`area`
		WHERE
		id = ANY (
		SELECT
		parent_id
		FROM
		`area`
		WHERE
		id = ANY (
		SELECT
		parent_id
		FROM
		`area`
		WHERE
		area_name = #{areaName}
		)
		);
	</select>

</mapper>